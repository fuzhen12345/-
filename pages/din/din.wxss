.dizi {
  width: 100%;
  height: 120rpx;
  display: flex;
  border-top: 3px solid #a9946c;
  border-bottom: 4px solid #ccc;
}
.dizi .x {
  margin-top: 20rpx;
  color: #ccc;
  padding-left: 30rpx;
  box-sizing: border-box;
  font-size: 30rpx;
  width: 90%;
}
.dizi .x .a {
  width: 50%;
  float: left;
}
.dizi .x .c {
  margin-top: 20rpx;
  width: 100%;
}
.dizi .gai {
  width: 10%;
}
.dizi .gai image{
  height: 60rpx;
  width: 60rpx;
  margin-top: 30rpx;
}
.li {
  height: 240rpx;
  border-bottom: 1px solid #ccc;
  display: flex;
  align-items: center;
}
.li image {
  width: 180rpx;
  height: 180rpx;
  margin-left: 30rpx;
}
.li view {
  margin-left: 30rpx;
}
.li view view {
  margin: 15rpx 0;
}
.bom{
  position: fixed;
  bottom: 0;
  height: 120rpx;
  width: 100%;
  display: flex;
  border-top: 1px solid #ccc;
  box-sizing: border-box;
  background-color: #fff;
  justify-content: space-between;
  align-items: center;
}
.bom .l{
  color: rgb(245, 97, 97);
  margin-left: 30rpx;
}
.bom .r{
  width: 170rpx;
  height: 120rpx;
  color: #fff;
  background-color: #a9946c;
  line-height: 120rpx;
  text-align: center;
}
